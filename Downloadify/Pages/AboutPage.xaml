        </Grid>
        <Border Grid.Column="1" Background="#e4e4e4">
            <StackPanel>
                <Border Grid.Row="0" Height="350" CornerRadius="20" Margin="30">
                    <Border.Background>
                        <ImageBrush ImageSource="/Assets/images/SanMonyakkhara.jpg" Stretch="UniformToFill"/>
