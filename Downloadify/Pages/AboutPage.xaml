                    <Image Height="70" Source="/Assets/images/ant.png" VerticalAlignment="Center" Margin="0 15 0 0 "/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" BorderBrush="#00ccc5" BorderThickness="0 0 1 0">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="San Mony" FontSize="50" FontWeight="Bold" FontFamily="{StaticResource Lobster}"/>
                            <TextBlock Text="Akkhara" FontSize="50" FontWeight="Bold" Foreground="#00ccc5" FontFamily="{StaticResource Lobster}"/>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                        <Border Height="35" Width="35" CornerRadius="17.5">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/images/downloadify.jpg"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="Downloadify" Margin="0 10 0 0" HorizontalAlignment="Center" FontSize="30" FontFamily="{StaticResource Lobster}" VerticalAlignment="Center" FontWeight="Bold"/>
